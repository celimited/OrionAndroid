<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:tools="http://schemas.android.com/tools"
	android:background="@drawable/gray_gradient_background"
	android:orientation="vertical"
	tools:context=".MarketReturnPageActivity">


	<ScrollView
	    android:layout_width="match_parent"
	    android:scrollbars="vertical"
	    android:fadeScrollbars="false"	    
	    android:layout_weight="4"
	    android:layout_height="0px">
	    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/gray_gradient_background"
	    android:orientation="vertical"
	    android:padding="5dp" >

		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">	
	        <TextView
	            android:layout_width="0px"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:padding="2dp"
	       		android:layout_gravity="center" 
	            android:text="Brand:"
	            android:textStyle="bold"/>

		    <Spinner
		        android:id="@+id/brand_list_drop_down_spinner"
		        android:layout_width="0px"
		        android:layout_weight="3"
		        android:layout_height="45dp"
		        android:layout_gravity="center"
		        android:paddingLeft="10dp"
		        android:textAlignment="center" />

		</LinearLayout>
			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">	
		        <TextView
		            android:layout_width="0px"
		            android:layout_height="wrap_content"
		            android:layout_weight="1"
		            android:padding="2dp"
		            android:layout_gravity="center" 
		            android:text="SKU:"
		            android:textStyle="bold"/>

			    <Spinner
			        android:id="@+id/sku_list_drop_down_spinner"
			        android:layout_width="0px"
			        android:layout_weight="3"
			        android:layout_height="45dp"
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:paddingLeft="10dp"
			        android:textAlignment="center" />

		</LinearLayout>
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">	
	        <TextView
	            android:layout_width="0px"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:padding="2dp"
	            android:layout_gravity="center" 
	            android:text="Reason:"
	            android:textStyle="bold"/>
		    <Spinner
		        android:id="@+id/reason_list_drop_down_spinner"
		        android:layout_width="0px"
		        android:layout_weight="3"
		        android:gravity="center"
		        android:paddingLeft="10dp"
		        android:layout_height="45dp"
		        android:layout_gravity="center"      
		        android:textAlignment="center" />
		</LinearLayout>
	   
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	
	        <TextView
	            android:layout_width="0px"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:padding="2dp"
	            android:text="QTY:"
	            android:textStyle="bold" />
	
	       <EditText
			    android:id="@+id/qty_edit_text"
				android:layout_width="0px"
				android:layout_height="45dp"
				android:textSize="13sp"
				android:layout_weight="1.5"
				android:paddingLeft="10dp"			
				android:maxLines="1"				
				android:maxLength="3"
				android:cursorVisible="true"
				android:inputType="number"
				android:hint="0" />     
			<TextView
	            android:layout_width="0px"
	            android:layout_weight="1.2"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:padding="2dp"
	            android:text="Batch:"
	            android:textStyle="bold" />
	
	       <EditText
			    android:id="@+id/batch_edit_text"
				android:layout_width="0px"
				android:layout_height="45dp"
				android:textSize="13sp"
				android:layout_weight="3.8"
				android:paddingLeft="10dp"			
				android:maxLines="1"
				android:maxLength="20"	
				android:cursorVisible="true"			
				android:hint="Batch" />        
	    </LinearLayout>
	    
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"	        
	        android:orientation="horizontal">	
			<TextView
	            android:layout_width="0px"
	            android:layout_weight=".9"
	            android:layout_height="wrap_content"
	            android:padding="2dp"
	            android:text="Exp. Date:"
	            android:textStyle="bold" />
			
		    <Spinner
		        android:id="@+id/date_month_spinner"
		        android:layout_width="0px"
		        android:layout_weight="1.6"
    		    android:paddingLeft="5dp"
		        android:layout_height="45dp"
		        android:layout_gravity="left"  
		        android:gravity="center"      
		        android:textAlignment="center" />
		   <Spinner
		        android:id="@+id/date_day_spinner"
		        android:layout_width="0px"
		        android:layout_weight="1.5"
		        android:paddingLeft="5dp"
		        android:layout_height="45dp"
		        android:layout_gravity="left"   
		        android:gravity="center"     
		        android:textAlignment="center" />
		  <Spinner
		        android:id="@+id/date_year_spinner"
		        android:layout_width="0px"
		        android:layout_weight="1.7"
		        android:paddingLeft="5dp"
		        android:gravity="center"
		        android:layout_height="45dp"
		        android:layout_gravity="left"        
		        android:textAlignment="center" />
		</LinearLayout>

		</LinearLayout>             
	         
	</ScrollView>
	
		
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

		<Button
		    android:id="@+id/add_button"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_gravity="center_vertical"
			android:textColor="@color/white"
			android:background="@drawable/darkgreen"
			android:height="35dp"
			android:text="Add"/>

		<Button
		    android:id="@+id/remove_button"
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textColor="@color/white"
			android:layout_gravity="center_vertical"
			android:background="@drawable/darkgreen"
			android:height="35dp"
			android:text="Remove"/>			
	</LinearLayout>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal" >
		<TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="2dp"            
            android:text="SKU"            
            android:gravity="center"
            android:textColor="#FFF"
            android:textStyle="bold" />
		<View
			android:visibility="gone"
    		android:layout_width="1dp"
    		android:layout_height="30dp"
    		android:background="@android:color/darker_gray"/>
		<TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:padding="2dp"
            android:text="QTY"
            android:gravity="center"
            android:textColor="#FFF"
            android:textStyle="bold" />
		<View
    		android:layout_width="1dp"
			android:visibility="gone"
			android:layout_height="30dp"
    		android:background="@android:color/darker_gray"/>
		<TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:padding="2dp"            
            android:text="Reason"
            android:gravity="center"
            android:textColor="#FFF"
            android:textStyle="bold" />
		<View
    		android:layout_width="1dp"
			android:visibility="gone"
			android:layout_height="30dp"
    		android:background="@android:color/darker_gray"/>
		<TextView
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:padding="2dp"            
            android:text="Batch"
            android:gravity="center"
            android:textColor="#FFF"
            android:textStyle="bold" />
	</LinearLayout>
	<ListView 
	       android:id="@+id/market_return_item_list_list_view" 
	       android:fadeScrollbars="false"           
	       android:layout_width="fill_parent"
	       android:layout_height="0px"
	       android:layout_weight="1.5"
	       android:scrollbars="vertical"	       
	       android:gravity="center">	    
	</ListView>
</LinearLayout>	
