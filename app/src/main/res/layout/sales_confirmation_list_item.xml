<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/list_item_background"
	android:orientation="vertical" >

	<LinearLayout
		android:id="@+id/mainLayout"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:id="@+id/sku_name"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textSize="@dimen/order_summery_text"
			android:layout_weight="2"
			android:padding="0dp"
			android:text="SKU"
			android:gravity="center_vertical"
			android:textStyle="bold" />

		<LinearLayout
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="0px"
			android:layout_height="wrap_content">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_gravity="center"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/ctn_value"
					android:text="0"
					android:paddingRight="@dimen/item_padding"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:textSize="@dimen/order_summery_text"
					android:gravity="right"/>
				<TextView
					android:layout_width="0dp"
					android:layout_weight="1"
					android:textSize="@dimen/order_summery_text"
					android:layout_height="wrap_content"
					android:text="@string/ctn"
					android:textStyle="bold" />

			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_gravity="center"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/pcs_value"
					android:text="0"
					android:layout_weight="1"
					android:paddingRight="@dimen/item_padding"
					android:layout_width="0dp"
					android:textSize="@dimen/order_summery_text"
					android:layout_height="wrap_content"
					android:gravity="right" />
				<TextView
					android:layout_weight="1"
					android:layout_width="0dp"
					android:textSize="@dimen/order_summery_text"
					android:layout_height="wrap_content"
					android:text="@string/pcs"
					android:textStyle="bold" />

			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="0px"
			android:layout_height="wrap_content">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/ctn_sold_value"
					android:text="0"
					android:paddingRight="@dimen/item_padding"
					android:layout_width="match_parent"
					android:textSize="@dimen/order_summery_text"
					android:layout_height="wrap_content"
					android:gravity="center"/>
				<TextView
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:textSize="@dimen/order_summery_text"
					android:layout_height="wrap_content"
					android:text="@string/ctn"
					android:gravity="center"
					android:textStyle="bold" />

			</LinearLayout>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<TextView
					android:id="@+id/pcs_sold_value"
					android:text="0"
					android:paddingRight="@dimen/item_padding"
					android:layout_width="match_parent"
					android:textSize="@dimen/order_summery_text"
					android:layout_height="wrap_content"
					android:gravity="center" />
				<TextView
					android:layout_width="match_parent"
					android:layout_weight="1"
					android:textSize="@dimen/order_summery_text"
					android:layout_height="wrap_content"
					android:text="@string/pcs"
					android:gravity="center"
					android:textStyle="bold" />

			</LinearLayout>
		</LinearLayout>

		<TextView
			android:id="@+id/value_value"
			android:layout_width="0px"
			android:layout_weight="1"
			android:layout_height="wrap_content"
			android:textSize="@dimen/order_summery_text"
			android:text="Value"
			android:gravity="right"
			android:textStyle="bold" />


	</LinearLayout>

	<LinearLayout
		android:id="@+id/extendedLayout"
		android:visibility="visible"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/sale_confirmation"
			android:gravity="center_vertical"
			android:textStyle="bold" />

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<android.support.design.widget.TextInputLayout
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/etCtn"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/ctn"
					android:inputType="number"
					android:textSize="@dimen/order_summery_text"
					android:maxLines="1"
					android:singleLine="true" />

			</android.support.design.widget.TextInputLayout>

			<android.support.design.widget.TextInputLayout
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/etPcs"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:hint="@string/pcs"
					android:textSize="@dimen/order_summery_text"
					android:inputType="number"
					android:maxLines="1"
					android:singleLine="true" />

			</android.support.design.widget.TextInputLayout>

			<android.support.design.widget.TextInputLayout
				android:layout_weight="1"
				android:layout_width="0dp"
				android:layout_height="wrap_content">

				<EditText
					android:id="@+id/etReplace"
					android:hint="@string/replace"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="@dimen/order_summery_text"
					android:inputType="number"
					android:maxLines="1"
					android:singleLine="true" />

			</android.support.design.widget.TextInputLayout>

		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_weight="1"
			android:gravity="end"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">


			<Button
				android:id="@+id/btnCancel"
				android:text="@string/alert_dialog_cancel"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/button_height"
				android:background="@color/colorPrimary"
				android:textColor="@color/white"/>

			<Button
				android:id="@+id/btnConfirm"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/button_height"
				android:background="@drawable/darkgreen"
				android:text="@string/confirm"
				android:textColor="@color/white"
				android:textStyle="bold" />

		</LinearLayout>

	</LinearLayout>

</LinearLayout>