<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" > <!-- When pressing the button -->
        <shape android:shape="rectangle">
            <!--
            <stroke
                android:width="2dp"
                android:color="#FFBBBBBB" />
            -->
            <corners
                android:radius="7dp" />
            
            <gradient
				android:startColor="#035de5"
				android:centerColor="#0274ee"
				android:endColor="#048bf4"
				android:angle="90" />
            
            <padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >  <!-- When the button is selected -->
        <shape android:shape="rectangle">
            <!--
            <stroke
                android:width="2dp"
                android:color="#FFBBBBBB" />
            -->
            <corners
                android:radius="7dp" />
            
            <solid android:color="#FFFFFFFF"/>
            <padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
        </shape>
    </item>

    <item>         <!-- Normal button -->
        <shape android:shape="rectangle">
            <!--
            <stroke
                android:width="1dp"
                android:color="#FFBBBBBB" />
            -->
            <corners
                android:radius="7dp" />
            
            <solid android:color="#FFFFFFFF"/>
            <padding
				android:left="10dp"
				android:top="10dp"
				android:right="10dp"
				android:bottom="10dp" />
        </shape>
    </item>
</selector>